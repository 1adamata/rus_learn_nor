  {
    "id": 1,
    "title": "01 • Greetings",
    "hint": "Russian stress matters: Privét (привет) is informal; Zdrávstvuyte (здравствуйте) is formal.",
    "phrases": [
      {
        "ru": "Привет!",
        "en": "Hi!"
      },
      {
        "ru": "Здравствуйте!",
        "en": "Hello! (formal)"
      },
      {
        "ru": "Как дела?",
        "en": "How are you?"
      },
      {
        "ru": "Хорошо, спасибо.",
        "en": "Good, thanks."
      },
      {
        "ru": "Пожалуйста.",
        "en": "Please / You're welcome."
      },
      {
        "ru": "До свидания!",
        "en": "Goodbye!"
      },
      {
        "ru": "Увидимся!",
        "en": "See you later!"
      },
      {
        "ru": "Спокойной ночи.",
        "en": "Good night."
      }
    ]
  },
